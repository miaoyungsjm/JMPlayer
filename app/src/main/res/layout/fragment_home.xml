<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:sothree="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.test.myplayer.home.HomeFragmentViewModel" />
    </data>

    <com.sothree.slidinguppanel.SlidingUpPanelLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        sothree:umanoDragView="@+id/slide_fragment_host"
        sothree:umanoOverlay="false"
        sothree:umanoPanelHeight="@dimen/sliding_up_header"
        sothree:umanoShadowHeight="@dimen/sliding_up_shadow">

        <fragment
            android:id="@+id/home_fragment_host"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:defaultNavHost="true" />

        <fragment
            android:id="@+id/slide_fragment_host"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:defaultNavHost="true" />

    </com.sothree.slidinguppanel.SlidingUpPanelLayout>

</layout>


