<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/home_fragment">

    <fragment
        android:id="@+id/home_fragment"
        android:name="com.test.myplayer.home.HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_main_fragment_to_person_fragment"
            app:destination="@id/person_fragment" />
    </fragment>

    <fragment
        android:id="@+id/person_fragment"
        android:name="com.test.myplayer.person.PersonFragment"
        tools:layout="@layout/fragment_person">
        <action
            android:id="@+id/action_person_fragment_to_main_fragment"
            app:destination="@id/home_fragment" />
    </fragment>

</navigation>