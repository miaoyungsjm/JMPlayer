<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_main"
    app:startDestination="@id/main_fragment">

    <fragment android:id="@+id/main_fragment">
        <action
            android:id="@+id/action_main_fragment_to_person_fragment"
            app:destination="@id/person_fragment" />
    </fragment>

    <fragment android:id="@+id/person_fragment">
        <action
            android:id="@+id/action_person_fragment_to_main_fragment"
            app:destination="@id/main_fragment" />
    </fragment>

</navigation>